<!DOCTYPE html>
<html>
<head>
  <title>Practice</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">WebSiteName</a>
            </div>
            <div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#">Page 1</a></li>
                    <li><a href="#">Page 2</a></li>
                    <li><a href="#">Page 3</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <%= current_user.email %> <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><%= link_to '編輯', edit_user_registration_path %></li>
                                <li class="divider"></li>
                                <li><%= link_to '登出', destroy_user_session_path, method: :delete %></li>
                            </ul>
                        </li>
                        <li><%= image_tag current_user.image, :alt => "user icon" %></li>
                    <% else %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role"button" aria-expanded="false">Sign up<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><%= link_to 'With Facebook', user_omniauth_authorize_path(:facebook) %></li>
                                <li class="divider"></li>
                                <li><%= link_to 'New account', new_user_registration_path %></li>
                            </ul>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role"button" aria-expanded="false">Login<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><%= link_to 'With Facebook', user_omniauth_authorize_path(:facebook) %></li>
                                <li class="divider"></li>
                                <li><%= link_to 'My Account', new_user_session_path %></li>
                            </ul>
                            </a>
                        </li>
                <% end %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <%= render 'flash_message' %>
        <%= yield %>
    </div>

    <!--
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    --!>
</body>
</html>
