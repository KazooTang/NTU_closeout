<table class="table" style="table-layout:fixed; word-break:break-all">
    <col width="400px">
    <col width="300px">
    <tr>
        <th>Picture</th>
        <th>Message</th>
        <th>Seller</th>
        <th>Created at</th>
        <th>Updated at</th>
        <% if user_signed_in? || current_page?(follows_path) %>
            <th colspan="1"></th>
        <% end %>
    </tr>
    <% @products.each do |p| %>
        <tr>
            <td style="text-align: center"><%= link_image_for(p) %></td>
            <td><%= simple_format(p.message) %> </td>
            <td><%= link_to p.name, "https://www.facebook.com/#{p.uid}" %></td>
            <td><%= p.created_time %> (<%= time_ago_in_words(p.created_time) %> ago)</td>
            <td><%= p.updated_time %> (<%= time_ago_in_words(p.updated_time) %> ago)</td>
            <% if user_signed_in? %>
                <% if current_page?(follows_path) %>
                    <td><%= link_to 'Destroy', follow_path(current_user.follows.where(product: p)[0].id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% else %>
                    <td><%= link_to 'Follow!', follows_path(p), method: :post %></th>
                <% end %>
            <% end %>
        </tr>
    <% end %>
</table>

