<%= if user_signed_in? 
        if current_user.follows.where(product_id: p).empty?
            link_to image_tag('icon-01.png', class: 'loveca hover-icon'), follows_path(product: p), method: :post, remote: true, data: {id: p.id}
        else
            id = current_user.follows.where(product_id: p)[0].id.to_s
            link_to image_tag('icon-01-2.png', class: 'loveca hover-icon show'), follow_path(id), method: :delete, remote: true, data: {id: p.id}
        end
    end %> 
